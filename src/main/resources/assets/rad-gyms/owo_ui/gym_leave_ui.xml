<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="horizontal">
                    <children>
                        <flow-layout direction="vertical">
                            <children>
                                <label>
                                    <text translate="true">rad-gyms.gui.common.leave-gym</text>
                                    <max-width>250</max-width>
                                    <horizontal-text-alignment>center</horizontal-text-alignment>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                    </sizing>
                                    <margins>
                                        <bottom>5</bottom>
                                    </margins>
                                </label>
                                <flow-layout direction="horizontal">
                                    <children>
                                        <button id="ok">
                                            <text translate="true">gui.proceed</text>
                                            <sizing>
                                                <horizontal method="fill">45</horizontal>
                                                <vertical method="fixed">20</vertical>
                                            </sizing>
                                        </button>
                                        <button id="cancel">
                                            <text translate="true">gui.cancel</text>
                                            <sizing>
                                                <horizontal method="fill">45</horizontal>
                                                <vertical method="fixed">20</vertical>
                                            </sizing>
                                        </button>
                                    </children>
                                    <gap>20</gap>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                        <vertical method="fixed">20</vertical>
                                    </sizing>
                                </flow-layout>
                            </children>
                            <sizing>
                                <vertical method="fixed">45</vertical>
                                <horizontal method="fixed">250</horizontal>
                            </sizing>
                        </flow-layout>
                    </children>
                    <vertical-alignment>center</vertical-alignment>
                    <horizontal-alignment>center</horizontal-alignment>
                    <padding>
                        <all>10</all>
                    </padding>
                    <surface>
                        <panel dark="true"/>
                    </surface>
                </flow-layout>
            </children>
            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>
            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>
