<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.21/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="horizontal">
                    <children>
                        <flow-layout direction="vertical">
                            <children>
                                <label id="typing">
                                    <text translate="true"/>
                                    <max-width>250</max-width>
                                    <horizontal-text-alignment>center</horizontal-text-alignment>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                    </sizing>
                                    <margins>
                                        <top>5</top>
                                    </margins>
                                </label>
                                <label id="usage">
                                    <text>rad-gyms.gui.common.set-gym-level</text>
                                    <max-width>250</max-width>
                                    <horizontal-text-alignment>center</horizontal-text-alignment>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                    </sizing>
                                    <margins>
                                        <top>5</top>
                                        <bottom>10</bottom>
                                    </margins>
                                </label>
                                <flow-layout direction="horizontal">
                                    <children>
                                        <button id="dec-ten">
                                            <text translate="true">-10</text>
                                            <sizing>
                                                <horizontal method="fixed">24</horizontal>
                                            </sizing>
                                        </button>
                                        <button id="dec">
                                            <text translate="true">-1</text>
                                            <sizing>
                                                <horizontal method="fixed">16</horizontal>
                                            </sizing>
                                        </button>
                                        <discrete-slider min="1" max="100" id="gym_slider">
                                            <sizing>
                                                <horizontal method="fill">66</horizontal>
                                                <vertical method="fixed">20</vertical>
                                            </sizing>
                                            <margins>
                                                <horizontal>4</horizontal>
                                            </margins>
                                        </discrete-slider>
                                        <button id="inc">
                                            <text translate="true">+1</text>
                                            <sizing>
                                                <horizontal method="fixed">16</horizontal>
                                            </sizing>
                                        </button>
                                        <button id="inc-ten">
                                            <text translate="true">+10</text>
                                            <sizing>
                                                <horizontal method="fixed">24</horizontal>
                                            </sizing>
                                        </button>
                                    </children>
                                    <horizontal-alignment>center</horizontal-alignment>
                                    <sizing>
                                        <vertical method="fixed">20</vertical>
                                        <horizontal method="fill">100</horizontal>
                                    </sizing>
                                </flow-layout>
                                <flow-layout direction="horizontal">
                                    <children>
                                        <button id="start">
                                            <text translate="true">gui.proceed</text>
                                            <sizing>
                                                <horizontal method="fill">45</horizontal>
                                                <vertical method="fixed">20</vertical>
                                            </sizing>
                                        </button>
                                        <button id="cancel">
                                            <text translate="true">gui.cancel</text>
                                            <sizing>
                                                <horizontal method="fill">45</horizontal>
                                                <vertical method="fixed">20</vertical>
                                            </sizing>
                                        </button>
                                    </children>
                                    <horizontal-alignment>center</horizontal-alignment>
                                    <gap>20</gap>
                                    <margins>
                                        <top>10</top>
                                    </margins>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                        <vertical method="fixed">20</vertical>
                                    </sizing>
                                </flow-layout>
                            </children>
                            <sizing>
                                <vertical method="fixed">90</vertical>
                                <horizontal method="fixed">260</horizontal>
                            </sizing>
                        </flow-layout>
                    </children>
                    <vertical-alignment>center</vertical-alignment>
                    <horizontal-alignment>center</horizontal-alignment>
                    <padding>
                        <all>10</all>
                    </padding>
                    <surface>
                        <panel dark="true"/>
                    </surface>
                </flow-layout>
            </children>
            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>
            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>
